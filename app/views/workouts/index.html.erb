<%= panel "Workouts" do %>
  <%= render "flash_messages" %>

  <% if @workouts.empty? %>
    <div class="alert alert-dismissible alert-info">
      There are not any workouts.
    </div>
  <% else %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th nowrap="">Workout name</th>
            <th nowrap="">Created at</th>
          </tr>
        </thead>
        <tbody>
          <% @workouts.each do |workout| %>
            <tr>
              <td><%= workout.name %></td>
              <td><%= link_to formatted_date(workout.created_at), workout_path(workout) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>
